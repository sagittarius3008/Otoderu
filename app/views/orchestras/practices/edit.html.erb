<div class="kamaishi photo">
  <div class="container-fluid">
    <div class="row mx-auto">
      <div class="col-lg-4 col-sm-10  card m-3 mx-auto">
      <h2 class="text-center m-4">練習予定変更</h2>
      <%= form_with model: @practice, url: { controller: "practices", action: "update" }, method: :patch, local:true do |f| %>
        <table class="mx-auto">
          <tbody>
            <tr>
              <td><%= f.label "日付",class:'m-2' %></td>
              <td><%= f.date_field :schedule, class:'form-control m-2' %></td>
            </tr>
            <tr>
              <td><%= f.label "時間",class: 'm-2' %></td>
              <td class="d-flex align-items-center">
                <%= f.time_select :start_time, {prompt:'--'}, class:'form-control m-2' %>-
                <%= f.time_select :end_time, {prompt:'--'}, class:'form-control m-2' %>
              </td>
            </tr>
            <tr>
              <td><%= f.label "練習場所",class: 'm-2' %></td>
              <td><%= f.text_field :place, class: 'form-control m-2', size: 30 %></td>
            </tr>
            <tr>
              <td><%= f.label "譜面台",class: 'm-2' %></td>
              <td>要<%= f.radio_button :stand, false, class: 'm-2' %>不要<%= f.radio_button :stand, true, class: 'm-2' %></td>
            </tr>
            <tr>
              <td><%= f.label "備考",class: 'm-2' %></td>
              <td><%= f.text_area :note, class: 'form-control m-2', size: "30x10" %></td>
            </tr>

          </tbody>
        </table>
        <div class="d-flex">
          <%= button_tag :class =>"wrapper icon w-25 " do %>
            <%= image_tag "img/icon/Hr.png", class: "img-icon" %>
            <div>登録する</div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>