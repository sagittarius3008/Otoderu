<div class="container">
  <div class="row">
    <div class="m-5 mx-auto col-6 card">
      <h2 class="text-center m-4"><%= "#{practice.schedule}の練習詳細" %></h2>
 
      <table>
        <tbody>
          <tr>
            <td>時間</td>
            <td><%= l practice.start_at, format: :short %>-<%= l practice.end_at, format: :short %></td>
          </tr>
          <tr>
            <td>場所</td>
            <td><%= practice.place %></td>
          </tr>
          <tr>
            <td>譜面台</td>
            <td><%= practice.stand? ? "不要" : "要" %></td>
          </tr>
          <tr>
            <td>備考</td>
            <td><%= practice.note %></td>
          </tr>
        </tbody>
      </table>
      <table border="2" class="table practice_index small-font mb-5">
        <thead>
          <tr class="text-center">
            <th class="table-th4 align-middle">名前</th>
            <th class="table-th3 align-middle">出欠</th>
            <th class="table-th5 align-middle">備考</th>
          </tr>
        </thead>
        <tbody>
          <% attendances.each do |attendance| %>
            <tr class="text-center">
              <td><%= "#{attendance.member.family_name}#{attendance.member.given_name}" %></td>
              <td><%= attendance.attendance_status %></td>
              <td><%= attendance.note %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="d-flex justify-content-between">
        <div><%= link_to "予定の編集", edit_orchestras_practice_path(practice) %></div>
        <div><%= link_to "日程削除", {controller: 'orchestras/practices', action: 'destroy' }, method: :delete, class: "m-3", data: { confirm: "\n削除すると元に戻せません。\nよろしいですか？" } %></div>
      </div>
      <%= link_to "CSV出力", orchestras_practice_path(format: :csv), class: "btn btn-primary m-3" %>
    </div>
  </div>
</div>