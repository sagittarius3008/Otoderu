<div class="container">
  <div class="row">
    <div class="mt-5 mx-auto col-11 d-flex">
      <div class="mr-5">
        <h2>登録済み楽器一覧</h2>
        <% @instruments.each do |instrument| %>
          <%= form_with model:instrument, url: orchestras_instrument_path(instrument), method: :patch, local:true do |f| %>
            <%= f.text_field :name, class: 'form-control　col-3' %>
            <%= button_tag :class =>"wrapper icon mb-0" do %>
              <%= image_tag "img/icon/Tp-mini.png", class: "wide-icon" %>
              <div>変更</div>
            <% end %>
          <% end %>
        <% end %>
      </div>
      <div class="mx-auto">
        <div class="d-flex">
          <h2 class="text-center">追加登録</h2>
          <div class="tooltip1 circle">Tips
            <span class="tooltip-text">未登録の楽器がありましたら追加ください。</span>
          </div>
        </div>
        <div class="d-flex">
          <%= form_with model:@instrument, url: orchestras_instruments_path, method: :post, local:true do |f| %>
            <%= f.label "楽器名称" %>
            <%= f.text_field :name, class: 'form-control　col-3 m-2' %>
            <%= button_tag :class =>"wrapper icon w-25 ml-3" do %>
              <%= image_tag "img/icon/Hr.png", class: "img-icon" %>
              <div>登録</div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>