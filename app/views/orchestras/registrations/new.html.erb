<div class="stage-left photo">
  <div class="container">
    <div class="row">
      <div class="mx-auto card col-lg-5 col-md-10 m-5">
      <h2 class="text-center m-5">新規団体登録</h2>
      <%= form_with model: @orchestra, url: orchestra_registration_path, local: true do |f| %>
        <%= render "members/shared/error_messages", resource: resource %>
        <div class="row d-flex justify-content-center mb-3">
          <%= f.text_field :name, autofocus: true, placeholder: "団体名",size: 40 %>
        </div>
        <div class="row d-flex justify-content-center mb-3">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス",size: 40 %>
        </div>
        <div class="row d-flex justify-content-center mb-3">
          <%= f.password_field :password, placeholder: "パスワード",size: 40 %>
        </div>
        <div class="row d-flex justify-content-center mb-3">
          <%= button_tag :class =>"wrapper icon w-25" do %>
            <%= image_tag "img/icon/Tp.png", class: "img-icon" %>
            <div>奏でる</div>
          <% end %>
        </div>
        <div class="row d-flex justify-content-center mb-3">
          ご登録済みの場合は<%= link_to "こちら", new_orchestra_session_path %>
        </div>
        <div class="row d-flex justify-content-center mb-3">
          個人登録の方は<%= link_to "こちら", new_member_registration_path %>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>