<div class="container">
  <div class="row">
    <div class="mt-5 mx-auto col-8">
      <h2>入団申請画面</h2>
        <% @orchestras.each do |orchestra| %>
          <div>
            <%= orchestra.name %>
            <%= form_with model: orchestra, url: members_orchestras_path, method: :post, class:"btn" ,local: true do |f| %>
              <%= hidden_field_tag :orchestra_id, orchestra.id %>
              <% unless orchestra.belongings.exists?(member_id: current_member.id) %>
                <%= f.submit "申請"  %>
              <% end  %>
            <% end  %>
          </div>
        <% end %>
    </div>
  </div>
</div>