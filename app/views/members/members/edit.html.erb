<div class="container">
  <div class="row">
    <div class="mx-auto mt-5">
    <h2>情報更新</h2>
    <%= form_with model: @member, url: {controller: "members", action: "update"}, method: :patch, local: true do |f| %>
      <table>
        <tr>
          <td>名前</td>
          <td>( 姓 )</td>
          <td><%= f.text_field :family_name, autofocus: true %> ( 名 ) <%= f.text_field :given_name, autofocus: true %></td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td>(セイ)</td>
          <td><%= f.text_field :family_name_kana, autofocus: true %>(メイ)<%= f.text_field :given_name_kana, autofocus: true %></td>
        </tr>
        <tr>
          <td>アドレス</td>
          <td></td>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email", size: 40 %></td>
        </tr>
        <tr>
          <td>楽器選択</td>
          <td></td>
          <td><%= f.select :instrument_id, @instruments.map{ |instrument| [instrument.name, instrument.id] }, {include_blank: '選択してください'} %></td>
        </tr>
         <tr>
          <td>自己紹介</td>
          <td></td>
          <td><%= f.text_field :introduction, autofocus: true, size: 40 %></td>
        </tr>
        <tr>
          <td></td>
          <td></td>
          <td>
            <%= f.submit "プロフィール更新" , class: "btn btn-success mr-2"%>
            <%= link_to "戻る", members_member_mypage_path, class:"btn btn-success" %>
          </td>
        </tr>
      </table>
    <% end %>
    </div>
  </div>
</div>